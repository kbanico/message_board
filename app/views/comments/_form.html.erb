<% if @comment.errors.any? %>
<h2>The following errors prevented the articles from getting created</h2>
<ul class="alert alert-danger list-unstyled">
  <% @comment.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>



<%= simple_form_for @comment, url: message_comments_path(@message) do |f| %>
  <%= f.input :content, label: "Comment", :input_html => {:rows => 10} %>
  <%= f.button :submit, :class => "btn-custom" %>

<% end %>
